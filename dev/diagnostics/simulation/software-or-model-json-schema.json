{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "some schema id",
    "title": "some schema title",
    "description": "some schema description",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "Name of the model/software",
            "type": "string"
        },
        "identifier": {
            "title": "Identifier",
            "description": "Identifier of the model/software, e.g. URL, DOI",
            "type": "string"
        },
        "group": {
            "title": "Group",
            "description": "Developer group(s)",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "contributors": {
            "title": "Contributors",
            "description": "Contributors/creators/authors of the model/software",
            "type": "object",
            "required": [
                "name",
                "role"
            ],
            "properties": {
                "name": {
                    "title": "Name",
                    "description": "Name of the contributor",
                    "type": "string"
                },
                "id": {
                    "title": "Identifier",
                    "description": "Identifier of the contributor",
                    "type": "string"
                },
                "role": {
                    "title": "Role",
                    "description": "Role of the contributor, e.g. main developer",
                    "type": "string"
                }
            }
        },
        "reference": {
            "title": "Reference (DOI)",
            "description": "DOI of reference(s) describing the model/software",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "approach": {
            "title": "Approach",
            "description": "Type of the approach, e.g. fluid, kinetic, hybrid",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "dimensionality": {
            "title": "Dimensionality",
            "description": "Dimensionality of the model/simulation, e.g. 1D, 2D, 2D-t",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "plasmaSource": {
            "title": "Plasma source",
            "description": "Plasma sources for which the model/software was developed, e.g. APPJ, DBD, CCP, MW",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "plasmaMedium": {
            "title": "Plasma medium",
            "description": "Media described by the model/software, e.g. Ar, air, water",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "pressureMin": {
            "title": "Minimum gas pressure [Pa]",
            "description": "Minimum pressure of the gas for which the model/software is valid",
            "type": "number"
        },
        "pressureMax": {
            "title": "Maximum gas pressure [Pa]",
            "description": "Maximum pressure of the gas for which the model/software is valid",
            "type": "number"
        },
        "plasmaState": {
            "title": "Plasma state",
            "description": "State of thermodynamic equilibrium of the plasma described by the model/software",
            "type": "array",
            "enum": [
                "thermal",
                "non-thermal"
            ],
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "maxItems": 2
        },
        "software": {
            "title": "Software",
            "description": "Further information for software packages",
            "type": "object",
            "required": [
                "license",
                "requirements"
            ],
            "properties": {
                "license": {
                    "title": "License",
                    "description": "Legal and licensing information",
                    "type": "string",
                    "enum": [
                        "GPLv3",
                        "GPLv2",
                        "LGPL",
                        "MIT",
                        "Apache",
                        "proprietary",
                        "All rights reserved"
                    ]
                },
                "repository": {
                    "title": "Repository",
                    "description": "Link to the software repository where the code is maintained",
                    "type": "string"
                },
                "language": {
                    "title": "Programming language",
                    "description": "Used programming language",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "requirements": {
                    "title": "Runtime requirements",
                    "description": "Requirements to run the software, e.g. operating system, dependencies",
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "name",
        "identifier",
        "group",
        "contributors",
        "approach",
        "dimensionality",
        "plasmaState"
    ]
}