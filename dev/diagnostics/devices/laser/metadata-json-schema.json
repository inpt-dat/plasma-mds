{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "some schema id",
    "title": "some schema title",
    "description": "some schema description",
    "type": "object",
    "properties": {
        "type": {
            "title": "type [-]",
            "description": "Type of the laser, e.g. QCL, tunable diode, broadband",
            "type": "string"
        },
        "central-wavenlength": {
            "title": "central-wavenlength [nm]",
            "description": "Central wavelength (CWL)",
            "type": "number"
        },
        "FWHM": {
            "title": "FWHM [nm]",
            "description": "Full width at half maximum",
            "type": "number"
        },
        "pulse-duration": {
            "title": "pulse-duration [ns]",
            "description": "Pulse duration",
            "type": "number"
        },
        "pulse-energy": {
            "title": "pulse-energy [mJ]",
            "description": "Pulse energy",
            "type": "number"
        },
        "current": {
            "title": "current [mA]",
            "description": "Laser current",
            "type": "number"
        },
        "temperature": {
            "title": "temperature [\\u00b0C]",
            "description": "Laser temperature",
            "type": "number"
        },
        "output-power": {
            "title": "output-power [mW]",
            "description": "Output power",
            "type": "number"
        }
    },
    "required": [
        "type",
        "central-wavenlength",
        "FWHM",
        "pulse-duration",
        "pulse-energy",
        "current",
        "temperature",
        "output-power"
    ]
}