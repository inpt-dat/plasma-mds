{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "some schema id",
    "title": "some schema title",
    "description": "some schema description",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "Name of the plasma source device",
            "type": "string"
        },
        "sn": {
            "title": "Serial number",
            "description": "Serial number of the device",
            "type": "string"
        },
        "developedBy": {
            "title": "Developer",
            "description": "Name of the company",
            "type": "string"
        },
        "AngleSourceValue": {
            "title": "Angle between source and analyser",
            "description": "Angle between source and analyser [\\u00b0]",
            "type": "number"
        },
        "Aperture": {
            "title": "Aperture of the device",
            "description": "Aperture of the device",
            "type": "string"
        },
        "ReferenceScale": {
            "title": "Reference scale",
            "description": "By giving position and FWHM of a ref material at a reference PE",
            "type": "string"
        },
        "Detector": {
            "title": "Detector type",
            "description": "Type and name of the detector",
            "type": "string"
        },
        "MaintenanceDate": {
            "title": "Last maintenance date",
            "description": "The date date of maintenance",
            "type": "string"
        },
        "IncidentAngle": {
            "title": "Incident Angle",
            "description": "Angle to surface normal [\\u00b0]",
            "type": "number"
        },
        "PhotonType": {
            "title": "X-ray excitation source",
            "description": "X-ray excitation source and with description of the line",
            "type": "string",
            "default": "Al K_alpha monochromatic/ Al K_alphanon-monochromatic/Mg K_alpha"
        },
        "ExcitationValue": {
            "title": "X-Ray excitation energy",
            "description": "X-Ray [eV]",
            "type": "number",
            "default": "1486.7"
        },
        "Monochromatic": {
            "title": "Monochromatized",
            "description": "monochromatization (yes/no)",
            "type": "boolean",
            "default": "yes"
        },
        "Resolution": {
            "title": "Resolution of the device",
            "description": "Resolution for device",
            "type": "number"
        },
        "AngleSputter": {
            "title": "Angle Sputtering",
            "description": "Angle between sputter beam and surface normal [\\u00b0]",
            "type": "number"
        },
        "DwellTimeValue": {
            "title": "Dwell time",
            "description": "dwell time [s]",
            "type": "number"
        },
        "TakeOff": {
            "title": "Take off angle",
            "description": "with respect to surface normal [\\u00b0]",
            "type": "number"
        },
        "AnalyserMode": {
            "title": "Analyser mode",
            "description": "Fixed analyser transmission/ Fixed pass energy (FAT) or constant retardation ratio (CRR)",
            "type": "string"
        },
        "DeviceEquipment": {
            "title": "Device equipment",
            "description": "Device equipment (further sources)",
            "type": "string"
        },
        "CoolHeat": {
            "title": "Cooling or heating",
            "description": "Is a cooling or heating system installed",
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "developedBy",
        "AngleSourceValue",
        "Aperture",
        "ReferenceScale",
        "Detector",
        "MaintenanceDate",
        "IncidentAngle",
        "PhotonType",
        "ExcitationValue",
        "Monochromatic",
        "Resolution",
        "AngleSputter",
        "DwellTimeValue",
        "TakeOff",
        "AnalyserMode"
    ]
}