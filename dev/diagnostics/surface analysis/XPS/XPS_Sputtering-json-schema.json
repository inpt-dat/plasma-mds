{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "some schema id",
    "title": "some schema title",
    "description": "some schema description",
    "type": "object",
    "properties": {
        "Sputter": {
            "title": "Sputtering of sample",
            "description": "Did a sputtering happen?",
            "type": "boolean",
            "default": "yes/no"
        },
        "SputterIonName": {
            "title": "Gas name",
            "description": "Name of the gas used for sputtering",
            "type": "string",
            "default": "Ar, He"
        },
        "Cluster": {
            "title": "Cluster/Ion",
            "description": "Cluster or ion sputtering",
            "type": "string"
        },
        "SputterEnergyValue": {
            "title": "Sputter energy",
            "description": "Energy of sputter process [eV]",
            "type": "number"
        },
        "SputterTimeValue": {
            "title": "Sputter time",
            "description": "Duration of the sputtering process [s]",
            "type": "number"
        },
        "SputterSpot": {
            "title": "Spot size of sputtering",
            "description": "Spot size of the sputtering [\\u00b5m]",
            "type": "number"
        }
    },
    "required": [
        "Sputter",
        "SputterIonName",
        "Cluster",
        "SputterEnergyValue",
        "SputterTimeValue",
        "SputterSpot"
    ]
}